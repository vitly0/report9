<div class="fix">
	<div class="container">
		<div class="row">
			<div class="col-10">
				<div class="shcedulenew">
					<h2 class='my-3'>社員情報編集</h2>
					<div>
					  <%= form_with model:@end_user, url: update_information_path, local:true do |f| %>
							<%= render 'layouts/error_messages', resource: @end_user %>
							<table class="end_user_info customer_form">
								<thead>
									<th></th>
									<th></th>
									<th></th>
								</thead>
							<tbody>
								<tr>
									<td>フリガナ</td>
									<td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"#{@end_user.first_name_kana}" %></td>
									<td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"#{@end_user.last_name_kana}" %></td>
									</tr>
									<tr>
										<td>名前</td>
										<td><%= f.label :first_name, "(姓)", class: "end_user_name" %> <%= f.text_field :first_name, :placeholder =>"#{@end_user.first_name}" %></td>
										<td><%= f.label :last_name, "(名)", class: "end_user_name" %> <%= f.text_field :last_name, :placeholder =>"#{@end_user.last_name}" %></td>
									</tr>
									<tr>
										<td>画像</td>
										<td><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %></td>
									</tr>
									<tr>
										<td><%= f.label :department_name, "部署名" %></td>
										<td colspan="2"><%= f.text_field :department_name, :placeholder =>"#{@end_user.department_name}" %></td>
									</tr>
									<tr>
										<td><%= f.label :work_location, "勤務地" %></td>
										<td colspan="2"><%= f.text_field :work_location, :placeholder =>"#{@end_user.work_location}" %></td>
									</tr>
									<tr>
										<td><%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %></td>
										<td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"#{@end_user.telephone_number}" %></td>
									</tr>
									<tr>
										<td><%= f.label :email, "メールアドレス" %></td>
										<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@end_user.email}" %></td>
									</tr>
									<tr>
										<td colspan="2">
											<div class='pt-3'>
												<%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
											</div>
										</td>
									</tr>
								</tbody>
							</table>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-2">
        <p><%= link_to "全予定一覧",schedules_path,class: "btn btn-warning btn-sm mb-3 sign_in mt-5" %></p>
        <p><%= link_to "全社員一覧",user_index_path,class: "btn btn-warning btn-sm mb-3 sign_in mt-3" %></p>
      </div>
		</div>
	</div>
</div>